{
  "name": "thinkcode-ai",
  "version": "1.0.0",
  "description": "ThinkCode AI - Intelligent development platform powered by AI to automate and optimize coding workflows",
  "author": "Integr8",
  "license": "MIT",
  "keywords": [
    "copilot",
    "ai",
    "automation",
    "jira",
    "task-processor",
    "enterprise",
    "mcp",
    "typescript",
    "bitbucket"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "concurrently \"npm run dev:backend\" \"next dev\"",
    "build": "next build && npm run build:backend",
    "dev:frontend": "next dev",
    "dev:backend": "cd backend && npm run dev",
    "build:backend": "cd backend && npm run build",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "workflow:process": "tsx scripts/process-workflow.ts",
    "jira:sync": "tsx scripts/sync-jira.ts",
    "bitbucket:sync": "tsx scripts/sync-bitbucket.ts",
    "mcp:start": "node dist/mcp-server.js",
    "docker:build": "docker build -t copilot-task-processor .",
    "prepare": "husky install",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.6.0",
    "@google-ai/generativelanguage": "^2.5.0",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@octokit/rest": "^20.0.2",
    "@prisma/client": "^6.16.3",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "bitbucket": "^2.8.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.3",
    "framer-motion": "^10.16.4",
    "fs-extra": "^11.1.1",
    "helmet": "^7.1.0",
    "inquirer": "^9.2.12",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "lucide-react": "^0.288.0",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1",
    "next": "^15.5.4",
    "openai": "^4.14.2",
    "p-retry": "^6.1.0",
    "prisma": "^6.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.3",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.17.0",
    "recharts": "^2.8.0",
    "simple-git": "^3.20.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "sqlite3": "^5.1.7",
    "styled-components": "^6.1.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "@types/bcryptjs": "^2.4.5",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/fs-extra": "^11.0.3",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.0",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitejs/plugin-react": "^4.1.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  }
}
