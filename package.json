{
  "name": "copilot-task-processor",
  "version": "1.0.0",
  "description": "Enterprise-grade task processor with Copilot AI - automates development workflow from Jira ticket to tested PR",
  "author": "dapio <dapio@example.com>",
  "license": "MIT",
  "keywords": [
    "copilot", "ai", "automation", "jira", "task-processor", "enterprise", "mcp", "typescript"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "npm run clean && tsc && npm run bundle",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "workflow:process": "tsx src/scripts/process-workflow.ts",
    "jira:sync": "tsx src/scripts/sync-jira.ts",
    "mcp:start": "node dist/mcp-server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "atlassian-js-api": "^2.0.0",
    "axios": "^1.6.0",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "simple-git": "^3.20.0",
    "p-queue": "^7.4.1",
    "p-retry": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@playwright/test": "^1.39.0",
    "typescript": "^5.2.2",
    "tsx": "^3.14.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": ["src/**/*.ts"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}