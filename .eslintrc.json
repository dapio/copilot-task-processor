{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended"],
  "env": {
    "node": true,
    "jest": true,
    "es2022": true
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "coverage/",
    "**/backup_temp/**",
    "**/generated/**",
    "frontend/src/components/TaskManagementPanel/**"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn",
    "no-unused-vars": "warn",
    "no-undef": "error",
    "no-case-declarations": "error",
    "no-unreachable": "error",
    "complexity": ["warn", 15],
    "max-depth": ["warn", 6],
    "max-lines-per-function": ["warn", 80]
  }
}
