# =================================
# ENHANCED MULTI-PROVIDER AI SYSTEM CONFIG
# =================================

NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ===========================================
# ENHANCED SYSTEM - AGENTS SERVER
# ===========================================
AGENTS_PORT=3003

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="file:./dev.db"
# For PostgreSQL:
# DATABASE_URL="postgresql://user:password@localhost:5432/thinkcode_ai"

# ===========================================
# GITHUB COPILOT CONFIGURATION (PRIMARY PROVIDER)
# ===========================================
# Optional - System will use mock responses if not provided
# GITHUB_COPILOT_API_URL="https://api.githubcopilot.com"
# GITHUB_COPILOT_API_KEY="your_github_copilot_api_key_here"

# ===========================================
# LEGACY INTEGRATIONS (EXISTING)
# ===========================================

# Jira/Atlassian Integration
JIRA_HOST=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=PROJ

# GitHub Integration
GITHUB_TOKEN=your-github-token
GITHUB_OWNER=dapio
GITHUB_REPO=your-repo-name
GITHUB_DEFAULT_BRANCH=main

# MCP Server
MCP_SERVER_PORT=3001
MCP_TRANSPORT=stdio

# ===========================================
# AI PROVIDER API KEYS (LEGACY)
# ===========================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=org-your-organization-id-here

# Anthropic Claude Configuration  
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# ===========================================
# ENHANCED SYSTEM FEATURES
# ===========================================
# Enable/disable mock responses (auto-enabled if no API key)
ENABLE_MOCK_RESPONSES=true

# Context management settings
MAX_CONTEXT_SIZE=100000
MAX_MESSAGES_PER_CONTEXT=1000
SESSION_TIMEOUT=3600000

# Chat integration settings
DEFAULT_MAX_TOKENS=4096
DEFAULT_TEMPERATURE=0.7

# Workflow settings
MAX_WORKFLOW_STEPS=20
WORKFLOW_TIMEOUT=300000

# ===========================================
# AZURE OPENAI (OPTIONAL)
# ===========================================

# Azure OpenAI Service
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# ===========================================
# SERVER CONFIGURATION  
# ===========================================

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000

# Database Configuration (if needed)
DATABASE_URL=postgresql://username:password@localhost:5432/copilot_task_processor

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# ===========================================
# EXTERNAL INTEGRATIONS
# ===========================================

# Jira Integration (optional)
JIRA_HOST=https://your-company.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token

# Bitbucket Integration (optional)
BITBUCKET_USERNAME=your-bitbucket-username
BITBUCKET_APP_PASSWORD=your-bitbucket-app-password

# Slack Integration (optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=your-slack-channel-id

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Application Insights (optional)
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# Datadog (optional)
DD_API_KEY=your-datadog-api-key
DD_SITE=datadoghq.com

# ===========================================
# SECURITY SETTINGS
# ===========================================

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-domain.com

# ===========================================
# AI MODEL CONFIGURATION
# ===========================================

# Default Model Preferences
DEFAULT_TEXT_MODEL=gpt-4
DEFAULT_CODE_MODEL=gpt-4
DEFAULT_VISION_MODEL=gpt-4-vision-preview
DEFAULT_ANALYSIS_MODEL=claude-3-opus

# Model Limits and Costs
MAX_TOKENS_PER_REQUEST=8000
COST_TRACKING_ENABLED=true
MONTHLY_BUDGET_LIMIT=1000  # USD

# ===========================================
# FILE PROCESSING SETTINGS
# ===========================================

# Upload Configuration  
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=.pdf,.docx,.txt,.md,.zip,.json,.csv
UPLOAD_DIRECTORY=./uploads
TEMP_DIRECTORY=./temp

# ZIP Analysis Settings
MAX_ZIP_SIZE=100MB
MAX_FILES_IN_ZIP=1000
SUPPORTED_LANGUAGES=typescript,javascript,python,java,csharp,go,rust

# ===========================================
# WORKFLOW CONFIGURATION
# ===========================================

# Default Workflow Settings
DEFAULT_WORKFLOW_TIMEOUT=3600000  # 1 hour in milliseconds
MAX_CONCURRENT_WORKFLOWS=10
AUTO_SAVE_PROGRESS=true

# Step Configuration
ENABLE_STEP_RETRIES=true
MAX_STEP_RETRIES=3
STEP_TIMEOUT=600000  # 10 minutes

# ===========================================
# LOGGING & DEBUG
# ===========================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/application.log

# Debug Mode
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false
COPILOT_MODEL=gpt-4
MAX_TOKENS=4000
TEMPERATURE=0.3

# Workflow Configuration
AUTO_CREATE_BRANCHES=true
AUTO_CREATE_PRS=true
REQUIRE_TESTS=true
MIN_TEST_COVERAGE=80